<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="frame_colorPrimary">#FF1B3A</color>
    <color name="frame_title_name">#333333</color>
    <color name="frame_white">#FFFFFF</color>
    <item name="frame_recycleView" type="id"/>
    <item name="frame_root_view" type="id"/>
    <string name="frame_check_network">请检查网络</string>
    <string name="frame_load_again">重新加载</string>
    <string name="frame_load_ing">加载中…</string>
    <string name="frame_no_data">暂无数据</string>
    <string name="frame_server_error">服务器错误: </string>
    <string name="frame_view_net_error">网络环境较差,请重新加载</string>
    <style name="ActionSheetDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/frame_colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/frame_colorPrimary</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/frame_colorPrimary</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/frame_title_name</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/frame_white</item>
        <!-- 适配RTL -->
        <item name="android:textDirection">locale</item>
    </style>
    <style name="DialogStyle">
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>